{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
  },
  "include": ["**/*.js", "node_modules/@open-wc/**/*.js"],
  "exclude": ["node_modules/!(@open-wc)"]
}
